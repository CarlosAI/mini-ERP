<h1>Odenes</h1>



<table>
<div>
  <thead>
    <tr>
      <th id="encabezado_tabla">Id Pedido</th>
      <th id="encabezado_tabla">Tipo Pedido</th>
      <th id="encabezado_tabla">Fecha</th>
      <th id="encabezado_tabla">Validez</th>
      <th id="encabezado_tabla">Condicion de Pago</th>
      <th id="encabezado_tabla">Forma de Pago</th>
      <th id="encabezado_tabla">Metodo de Envio</th>
      <th id="encabezado_tabla">Fecha de entrega</th>
      <th id="encabezado_tabla">Nombre del Tercero</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  </div>
 <tbody>
    <% @ordenes_de_cliente.each do |pedido| %>
    <tr>
    <td><%= pedido.id_pedido %></td>
    <td><%= pedido.tipo_pedido %></td>
    <td><%= pedido.fecha %></td>
    <td><%= pedido.validez %></td>
    <td><%= pedido.condicion_pago %></td>
    <td><%= pedido.forma_pago %></td>
    <td><%= pedido.metodo_envio %></td>
    <td><%= pedido.fecha_entrega %></td>
    <td><%= @nombre_tercero %></td>
    <td><%= link_to 'Detalles' %></td>
    </tr>
    <% end %>
 </tbody>
</table>


<style>
h1{
  color: black;
}
#encabezado{
  background-color:lightblue;
}
#encabezado_tabla{
  background-color:lightgray;
}
</style>