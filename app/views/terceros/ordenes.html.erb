<h1>Ordenes</h1>



<table class="table table-hover table-sm">
<div>
  <thead class="thead-dark">
    <tr>
      <th id="encabezado_tabla">Id Pedido</th>
      <th id="encabezado_tabla">Tipo Pedido</th>
      <th id="encabezado_tabla">Fecha</th>
      <th id="encabezado_tabla">Nombre del Tercero</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  </div>
 <tbody>
    <% @ordenes_de_cliente.each do |pedido| %>
    <tr>
    <td><%= pedido.id %></td>
    <td><%= pedido.tipo_pedido %></td>
    <td><%= pedido.fecha %></td>
    <td><%= @nombre_tercero %></td>
    <td><%= button_to 'Ver Detalles', detalles_terceros_path(pedido.id), :method => :get %></td>
    </tr>
    <% end %>
 </tbody>
</table>


