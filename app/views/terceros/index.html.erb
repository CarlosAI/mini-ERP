<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">

<div id="encabezado">
<h1>Terceros</h1>
</div>

<form action="/terceros/new" method="get">
<button type="submit" class="btn btn-light btn-lg">Nuevo tercero</button>
</form>


<table class="table table-hover table-sm t">
<div>
  <thead id="encabezado_tabla" class="thead-dark">
    <tr>
      <th><p align="center">Id</p></th>
      <th><p align="center" class="columna1">Nombre</p></th>
      <th><p align="center" class="columna2">Cliente</p></th>
      <th><p align="center" class="columna2">Proveedor</p></th>
      <th><p align="center" class="columna1">Direccion</p></th>
      <th><p align="center" class="columna2">Codigo postal</p></th>
      <th><p align="center" class="columna3">Ciudad</p></th>
      <th><p align="center" class="columna3">Estado</p></th>
      <th><p align="center" class="columna2">Pais</p></th>
      <th><p align="center" class="columna3">E-mail</p></th>
      <th><p align="center" class="columna3">Sitio web</p></th>
      <th><p align="center" class="columna3">Telefono</p></th>
      <th><p align="center" class="columna3">RFC</p></th>
      <th><p align="center">Forma juridica</p></th>
      <th colspan="4"></th>
    </tr>
  </thead>
  </div>

  <tbody>
    <% @terceros.each do |tercero| %>
      <tr>
        <td><p align="center" class="alcentro"><%= tercero.id_tercero %></p></td>
        <td><p align="center" class="alcentro"><%= tercero.nombre_tercero %></p></td>
        <td><p align="center" class="alcentro"><%= tercero.cliente %></p></td>
        <td><p align="center" class="alcentro"><%= tercero.proveedor %></p></td>
        <td><p align="left" class="alcentro"><%= tercero.direccion %></p></td>
        <td><p align="center" class="alcentro"><%= tercero.codigo_postal %></p></td>
        <td><p align="center" class="alcentro"><%= tercero.ciudad %></p></td>
        <td><p align="center" class="alcentro"><%= tercero.estado %></p></td>
        <td><p align="center" class="alcentro"><%= tercero.pais %></p></td>
        <td><p align="center" class="alcentro"><%= tercero.email %></p></td>
        <td><p align="center" class="alcentro"><%= tercero.sitio_web %></p></td>
        <td><p align="center" class="alcentro"><%= tercero.telefono %></p></td>
        <td><p align="center" class="alcentro"><%= tercero.rfc %></p></td>
        <td><p align="center" class="alcentro"><%= tercero.forma_juridica %></p></td>
        <td><p align="center"><%= button_to 'Show', tercero %></p></td>
        <td><p align="center"><%= button_to 'Edit', edit_tercero_path(tercero), :method => :get %></p></td>
        <td><p align="center"><%= button_to 'Destroy', tercero, method: :delete, data: { confirm: 'Are you sure?' } %></p></td>
        <td><p align="center"><%= button_to 'Ver ordenes', ordenes_terceros_path(tercero.id_tercero), :method => :get %></p></td>
      </tr>
    <% end %>
  </tbody>
</table>
<style type="text/css" media="screen">
.columna1{
  width:230px;
}  
.columna2{
  width: 75px;
}
.columna3{
  width: 120px;
}
.alcentro{
  padding-top: 20px;
}
</style>