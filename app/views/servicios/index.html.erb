<p id="notice"><%= notice %></p>

<h1>Servicios</h1>

<table>
  <thead>
    <tr>
      <th>Id servicio</th>
      <th>Etiqueta servicio</th>
      <th>Estado venta</th>
      <th>Estado compra</th>
      <th>Descripcion</th>
      <th>Duracion</th>
      <th>Precio venta</th>
      <th>Precio venta min</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @servicios.each do |servicio| %>
      <tr>
        <td><%= servicio.id_servicio %></td>
        <td><%= servicio.etiqueta_servicio %></td>
        <td><%= servicio.estado_venta %></td>
        <td><%= servicio.estado_compra %></td>
        <td><%= servicio.descripcion %></td>
        <td><%= servicio.duracion %></td>
        <td><%= servicio.precio_venta %></td>
        <td><%= servicio.precio_venta_min %></td>
        <td><%= link_to 'Show', servicio %></td>
        <td><%= link_to 'Edit', edit_servicio_path(servicio) %></td>
        <td><%= link_to 'Destroy', servicio, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

